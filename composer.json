{
    "name": "lion/framework",
    "description": "The Lion-Framework",
    "type": "project",
    "homepage": "https://lion-client.vercel.app/",
    "keywords": ["lion", "framework", "lion-framework"],
    "license": "MIT",
    "autoload": {
        "files": [
            "routes/middleware.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Class\\": "database/Class/",
            "Database\\Factory\\": "database/Factory/",
            "Database\\Seed\\": "database/Seed/"
        }
    },
    "autoload-dev": {
        "files": [
            "routes/middleware.php"
        ],
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.3",
        "lion/authentication": "^4.0",
        "lion/bundle": "^17.9"
    },
    "require-dev": {
        "lion/test": "^2.0",
        "phpunit/phpunit": "^11.0",
        "robiningelbrecht/phpunit-pretty-print": "^1.3"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
     "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
